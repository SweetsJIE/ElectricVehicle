<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sweetsjie.electricvehicle.MainActivity">

    <com.amap.api.maps2d.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="平均速度"
        android:layout_below="@+id/textView5"
        android:layout_toLeftOf="@+id/cutPowerButton"
        android:layout_toStartOf="@+id/cutPowerButton"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView10"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:text="电池电压" />

    <Button
        android:id="@+id/cutPowerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="切断电源"
        android:layout_marginBottom="21dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/speedShow"
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Km/h"
        android:id="@+id/textView5"
        android:layout_below="@+id/imageView2"
        android:layout_toRightOf="@+id/speedShow"
        android:layout_toEndOf="@+id/speedShow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:id="@+id/powerShow"
        android:layout_above="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/powerShow"
        android:layout_toEndOf="@+id/powerShow" />

    <EditText
        android:id="@+id/inputPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginBottom="17dp"
        android:hint="请输入接收短信号码"
        android:layout_above="@+id/cutPowerButton"
        android:layout_toStartOf="@+id/textView6" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/speed"
        android:layout_below="@+id/map_view"
        android:layout_toLeftOf="@+id/cutPowerButton"
        android:layout_toStartOf="@+id/cutPowerButton"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/power"
        android:layout_above="@+id/powerShow"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

</RelativeLayout>
